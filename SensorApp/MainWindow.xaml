                            Grid.Row="1">
                        <TextBlock Style="{StaticResource Sidebar.ElementIdentifier}"
                                   Text="Average Value: "
                                   Grid.Row="1" />
                    </Border>
                    <TextBlock Style="{StaticResource Sidebar.ElementValueStatic}"
                               Text="{Binding ActiveDataset.AverageValue, TargetNullValue='N/A'}"

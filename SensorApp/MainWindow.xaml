            <!-- Properties Sidebar -->
            <StackPanel Grid.Row="1" Grid.Column="0" Background="{StaticResource Primary.DarkBrush}">
                <Grid Margin="5,0,5,0" Background="{StaticResource Primary.MainBrush}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>


                    <Label Style="{StaticResource Sidebar.ElementBoxTitle}"
                           Content="Dataset Properties"
                           Grid.Row="0"/>
                    <Button Name="RefreshPropertiesBtn"
                            Click="RefreshPropertiesBtn_Click"
                            
                            Content="Q"
                            FontFamily="Wingdings 3"
                            FontWeight="Bold"
                            Width="20"
                            Height="20" 
                            Grid.Row="0" Grid.Column="1"
                            HorizontalAlignment="Right" />



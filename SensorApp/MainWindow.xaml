                    <Border Style="{StaticResource Sidebar.ElementIndentLine}"
                            Grid.Row="3">
                        <TextBlock Style="{StaticResource Sidebar.ElementValueStatic}"
                                   Text="Lower Constraint: "
                                   Grid.Row="3" />
                    </Border>
                    <TextBox Style="{StaticResource Sidebar.ElementValueDynamic}"
                             Text="{Binding LowerBound, Mode=TwoWay, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="3" />

                    <Border Style="{StaticResource Sidebar.ElementIndentLine}"
                            Grid.Row="4">
                        <TextBlock Style="{StaticResource Sidebar.ElementValueStatic}"
                                   Text="Target Value: "
                                   Grid.Row="4" />
                    </Border>
                    <TextBox Style="{StaticResource Sidebar.ElementValueDynamic}"

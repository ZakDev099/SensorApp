<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- HEADER -->
    
    <!-- Buttons -->
    <Style x:Key="Header.ButtonLeft" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="DockPanel.Dock" Value="Left" />
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="MinWidth" Value="30" />
        <Setter Property="MinHeight" Value="30" />
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Name="border" 
                            BorderThickness="0"
                            CornerRadius="3" 
                            Background="Transparent">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="Black" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Header.ButtonRight" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="DockPanel.Dock" Value="Right" />
        <Setter Property="Margin" Value="0,0,5,0" />
        <Setter Property="MinWidth" Value="30" />
        <Setter Property="MinHeight" Value="30" />
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Name="border" 
                            BorderThickness="0"
                            CornerRadius="3" 
                            Background="Transparent">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="Black" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SIDEBAR -->
    
    <!-- Labels -->
    <Style x:Key="Sidebar.Title" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Foreground" Value="{StaticResource Secondary.LightBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="Sidebar.ElementBoxTitle" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource Secondary.LightBrush}" />
        <Setter Property="Grid.Column" Value="0" />
    </Style>
    <!-- TextBlocks -->
    <Style x:Key="Sidebar.ElementIdentifier" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="5,0,5,5"/>
        <Setter Property="Foreground" Value="{StaticResource Secondary.LightBrush}" />
        <Setter Property="Grid.Column" Value="0" />
    </Style>
    <Style x:Key="Sidebar.ElementValueStatic" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="5,0,5,5"/>
        <Setter Property="Foreground" Value="{StaticResource Secondary.LightBrush}" />
        <Setter Property="Grid.Column" Value="0" />
    </Style>
    <!-- TextBox -->
    <Style x:Key="Sidebar.ElementValueDynamic" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{StaticResource Secondary.MainBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Secondary.LightBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Grid.Column" Value="1" />
    </Style>
    <!-- Border -->
    <Style x:Key="Sidebar.ElementIndentLine" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="BorderBrush" Value="{StaticResource Secondary.LightBrush}" />
        <Setter Property="BorderThickness" Value="2,0,0,0" />
        <Setter Property="Grid.Column" Value="0" />
    </Style>

    
</ResourceDictionary>